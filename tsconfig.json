{
    "compilerOptions": {
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "noEmit": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": ["src", "tests", "examples"],
}